<html>
  <head>
    <link rel="stylesheet" href="/assets/css/bootstrap.css">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
  <style>
  .move-icon {
  font-size: 144px;
  }
  .text-center {
      text-align: center;
  }
  </style>
</head>

  <body>
    <div class="container">
      <hr />
      <div class="row">
        <div class="col-md-8 col-md-offset-2 col-xs">
          <div class="btn-group btn-group-justified">
            <a href="http://localhost:3000/rock" class="btn btn-block btn-primary">Play Rock</a>
            <a href="http://localhost:3000/paper" class="btn btn-block btn-info">Play Paper</a>
            <a href="http://localhost:3000/scissors" class="btn btn-block btn-primary">Play Scissors</a>
          </div>
        </div>
      </div>
    <hr />

      <div class="row">
        <div class="col-md-4 col-md-offset-2 col-xs-6">
          <div class="panel panel-success">
            <div class="panel-heading">
              <h2 class="panel-title text-center">
                Scissors
              </h2>
            </div>
            <div class="panel-body text-center">
              <i class="fa move-icon fa-hand-scissors-o"></i>
            </div>

          </div>
        </div>

        <div class="col-md-4 col-xs-6">
          <div class="panel panel-danger">
            <div class="panel-heading">
              <h2 class="panel-title text-center">
                <%= computer_move = ["Rock","Paper","Scissors"].sample %>
              </h2>
            </div>
            <div class="panel-body text-center">
              <% if computer_move == "Rock" %>
                <i class="fa move-icon fa-hand-rock-o"></i>
              <% elsif computer_move == "Paper" %>
                <i class="fa move-icon fa-hand-paper-o"></i>
              <% else %>
                <i class="fa move-icon fa-hand-scissors-o"></i>
              <% end %>

            </div>
          </div>
        </div>

    </div>

    <div class="row">
      <div class="well text-center">
        <h1><% if computer_move == "Rock" %>
        <span class="label label-danger">
        You lost!
        </span>
        <% elsif computer_move == "Paper" %>
        <span class="label label-success">
        You won!
        </span>

        <% else %>
        <span class="label label-warning">
          You tied!
        </span>
      </h1>
        <% end %>
      </div>
    </div>
  </div>




</body>

</html>
